<div class="container">
  <div class="row">
    <div class="large-12 columns hero-block">
      <center>
        <h2 class="thin">We would love to tell your story.</h2>
      </center>
    </div>
  </div>

  <%# Flash %>
  <div class='row'>
    <%- if flash[:notice].present? -%>
      <div class="alert-box">
        <%= flash[:notice] %>
      </div>
    <%- end -%>
  </div>

  <%= form_tag(contact_form_path, :method => 'post') do %>
    <div class="row">
      <fieldset>
        <div class="row">
          <div class="large-4 columns">
            <label>What's your name?</label>
            <%= text_field_tag "name", @name, placeholder: "Captain Henry Dombey" %>
          </div>
        </div>

        <div class="row">
          <div class="large-4 columns">
            <label>What's your email?</label>
            <%= email_field_tag "email", @email, placeholder: "CaptainHenry@gmail.com" %>
          </div>
        </div>

        <div class="row">
          <div class="large-6 columns">
            <label>What kind of project are you thinking about?</label>
            <%= text_area_tag "message", @message, placeholder: "I'd love to work with you on my upcoming project documenting ship builders." %>
          </div>
        </div>
      </fieldset>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <p><%= submit_tag "Send message", :class => "large button" %></p>
      </div>
    </div>

  <% end %>

</div>
